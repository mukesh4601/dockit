{
  "name": "dockit",
  "version": "1.0.0",
  "description": "Application to simplyfy application design using docker",
  "main": "index.js",
  "preferGlobal": true,
  "bin": "./controllers/monitoring/containerMonitoring.js",
  "scripts": {
    "test": "jest",
    "testWatch": "jest --watch",
    "coverage": "jest --coverage",
    "dockit": "ts-node src/dockit-core/index.ts",
    "build:dockit": "webpack --config dockit_cli.webpack.config.js && pkg -t node10-linux dist/dockit.js && cp dockit ./dockit-cli/usr/bin/ && sudo dpkg-deb --build dockit-cli"
  },
  "debianPackageOptions": {
    "maintainer": {
      "name": "Saifullah Khan",
      "email": "work.saifullah@gmail.com"
    },
    "prefix": "",
    "name": "dockit",
    "postfix": "",
    "short_description": "Easing Development pains",
    "long_description": "Easing Development pains",
    "version": "1.0.0",
    "build_number": "1",
    "target_architecture": "amd64",
    "category": "devel",
    "links": [
      {
        "source": "/var/log/my-project",
        "target": "/var/log/tomcat7"
      },
      {
        "source": "/etc/init.d/my-project",
        "target": "/etc/init.d/tomcat7"
      }
    ],
    "directories": [
      "/var/app/${name}"
    ],
    "dependencies": "couchdb, redis-server",
    "files": [
      {
        "cwd": "./",
        "src": [
          "dockit"
        ],
        "dest": "/var/www/"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tech-genii/dockit.git"
  },
  "keywords": [
    "docker",
    "container",
    "docker-ui",
    "container-monitoring"
  ],
  "author": "saifullah",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tech-genii/dockit/issues"
  },
  "homepage": "https://github.com/tech-genii/dockit#readme",
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.19.0",
    "dockerode": "^2.5.7",
    "fs": "0.0.1-security",
    "ts-loader": "^5.3.1",
    "tty-table": "^2.6.9",
    "webpack": "^4.27.1",
    "webpack-css-loaders": "^1.0.0",
    "yaml": "^1.1.0"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/dockerode": "^2.5.10",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.15",
    "@types/webpack": "^4.4.21",
    "@types/webpack-dev-server": "^3.1.1",
    "@types/yaml": "^1.0.1",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "clean-webpack-plugin": "^1.0.0",
    "debian-packager": "^1.5.3",
    "file-loader": "^2.0.0",
    "jest": "^23.6.0",
    "pkg": "^4.3.5",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14"
  }
}
